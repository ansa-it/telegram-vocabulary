{
  "name": "Telegram Vocabulary Dev Container",
  "build": {
    "dockerfile": "../Dockerfile",
    "context": ".."
  },
  "settings": {
    "terminal.integrated.shell.linux": "/bin/bash"
  },
  "extensions": [
    "ms-python.python",
    "ms-python.vscode-pylance"
  ],
  "forwardPorts": [8000],
  "postCreateCommand": "pip install --no-cache-dir -r requirements.txt"
}
